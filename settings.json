{
  "go.buildTags": "integration,e2e",
  "gopls": {
    "ui.semanticTokens": true
  },
  "go.formatTool": "gofumpt",
  "keyboard.dispatch": "keyCode",
  "editor.formatOnSave": true,
  "editor.suggest.insertMode": "replace",
  "editor.linkedEditing": true,
  "javascript.updateImportsOnFileMove.enabled": "always",
  "launch": {},
  "[json]": {},
  "editor.minimap.enabled": false,
  "breadcrumbs.enabled": true,
  "workbench.iconTheme": "material-icon-theme",
  "update.showReleaseNotes": false,
  "zenMode.hideLineNumbers": false,
  "editor.fontSize": 10,
  "vim.leader": "<Space>",
  "vim.hlsearch": true,
  "vim.handleKeys": {
    "<C-s>": false,
    "<C-f>": false,
    "<C-v>": false,
    "<C-c>": false,
    "<C-z>": false,
    "<C-x>": false,
    "<C-/>": false,
  },
  "vim.normalModeKeyBindingsNonRecursive": [
    {
      "before": [
        "<Esc>"
      ],
      "commands": [
        ":nohl"
      ],
    },
    {
      "before": [
        "<S-h>"
      ],
      "commands": [
        ":bprevious"
      ]
    },
    {
      "before": [
        "<S-l>"
      ],
      "commands": [
        ":bnext"
      ]
    },
    {
      "before": [
        "leader",
        "v"
      ],
      "commands": [
        ":vsplit"
      ]
    },
    {
      "before": [
        "leader",
        "s"
      ],
      "commands": [
        ":split"
      ]
    },
    // panes
    {
      "before": [
        "leader",
        "h"
      ],
      "commands": [
        "workbench.action.focusLeftGroup"
      ]
    },
    {
      "before": [
        "leader",
        "j"
      ],
      "commands": [
        "workbench.action.focusBelowGroup"
      ]
    },
    {
      "before": [
        "leader",
        "k"
      ],
      "commands": [
        "workbench.action.focusAboveGroup"
      ]
    },
    {
      "before": [
        "leader",
        "l"
      ],
      "commands": [
        "workbench.action.focusRightGroup"
      ]
    },
    {
      "before": [
        "leader",
        "w"
      ],
      "commands": [
        ":w!"
      ]
    },
    {
      "before": [
        "leader",
        "q"
      ],
      "commands": [
        ":q!"
      ]
    },
    {
      "before": [
        "leader",
        "x"
      ],
      "commands": [
        ":x!"
      ]
    },
    {
      "before": [
        "[",
        "d"
      ],
      "commands": [
        "editor.action.marker.prev"
      ]
    },
    {
      "before": [
        "]",
        "d"
      ],
      "commands": [
        "editor.action.marker.next"
      ]
    },
    {
      "before": [
        "<leader>",
        "c",
        "a"
      ],
      "commands": [
        "editor.action.quickFix"
      ]
    },
    {
      "before": [
        "leader",
        "f"
      ],
      "commands": [
        "workbench.action.quickOpen"
      ]
    },
    {
      "before": [
        "leader",
        "p"
      ],
      "commands": [
        "editor.action.formatDocument"
      ]
    },
    {
      "before": [
        "g",
        "h"
      ],
      "commands": [
        "editor.action.showDefinitionPreviewHover"
      ]
    }
  ],
  "vim.visualModeKeyBindings": [
    // Stay in visual mode while indenting
    {
      "before": [
        "<"
      ],
      "commands": [
        "editor.action.outdentLines"
      ]
    },
    {
      "before": [
        ">"
      ],
      "commands": [
        "editor.action.indentLines"
      ]
    },
    // Move selected lines while staying in visual mode
    {
      "before": [
        "J"
      ],
      "commands": [
        "editor.action.moveLinesDownAction"
      ]
    },
    {
      "before": [
        "K"
      ],
      "commands": [
        "editor.action.moveLinesUpAction"
      ]
    },
    // toggle comment selection
    {
      "before": [
        "leader",
        "c"
      ],
      "commands": [
        "editor.action.commentLine"
      ]
    }
  ],
  "git.decorations.enabled": true,
  "editor.fontLigatures": true,
  "workbench.editor.enablePreview": false,
  // Hot pink scroll bar
  "workbench.colorCustomizations": {
    "editor.selectionHighlightBackground": "#ffff0044",
    "editorGroupHeader.tabsBackground": "#0A0E1A", // Soothing green for the tab strip background
    "scrollbarSlider.background": "#F0C67444",
    "tab.activeBorder": "#FF69B4",
    "tab.activeBorderTop": "#FF69B4",
    "terminal.background": "#0A0E1A",
    "terminal.foreground": "#C5C8C6",
    "terminalCursor.foreground": "#FFFFFF", // Bright white cursor
    "terminalCursor.background": "#1C1C1C", // Black text when cursor is on it
    // Selection settings
    "terminal.ansiBlack": "#1C1C1C",
    "terminal.ansiRed": "#CC6666",
    "terminal.ansiGreen": "#B5BD68",
    "terminal.ansiYellow": "#F0C674",
    "terminal.ansiBlue": "#81A2BE",
    "terminal.ansiMagenta": "#B294BB",
    "terminal.ansiCyan": "#8ABEB7",
    "terminal.ansiWhite": "#C5C8C6",
    "terminal.ansiBrightBlack": "#666666",
    "terminal.ansiBrightRed": "#D54E53",
    "terminal.ansiBrightGreen": "#B9CA4A",
    "terminal.ansiBrightYellow": "#E7C547",
    "terminal.ansiBrightBlue": "#7AA6DA",
    "terminal.ansiBrightMagenta": "#C397D8",
    "terminal.ansiBrightCyan": "#70C0B1",
    "terminal.ansiBrightWhite": "#FFFFFF",
    "editorCursor.background": "#FF0000", // Semi-transparent bright white
    "editorLineNumber.activeForeground": "#FFD700",
    "tab.activeBackground": "#000000", // Color for the active tab in the focused editor group
    // Other tabs (inactive and unfocused)
    "tab.inactiveBackground": "#1e1e1e", // Inactive tabs in the focused group
    "tab.unfocusedActiveBackground": "#1e1e1e", // Active tab in unfocused editor group
    "tab.unfocusedInactiveBackground": "#1e1e1e", // Inactive tabs in unfocused groups
    "editor.lineHighlightBackground": "#000000"
  },
  "workbench.colorTheme": "Default Dark+",
  "gitlens.currentLine.enabled": true,
  "editor.tokenColorCustomizations": {
    "textMateRules": [
      {
        "scope": "comment",
        "settings": {
          "foreground": "#FF8C00" //"#FF8C00" // Pumpkin spice
        }
      },
      {
        "scope": [
          "entity.name.function", // Targets function names
          "support.function" // Covers built-in functions
        ],
        "settings": {
          "foreground": "#39FF14" // Neon Green
        }
      },
    ]
  },
}
